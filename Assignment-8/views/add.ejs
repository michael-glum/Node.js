<%- include("header") %>
<h2>Add a contact</h2>
<% if (errorCode == 0) { %>
  <div class="alert alert-danger">Invalid email address.</div>
<% } else { %>
<% if (errorCode == 1) { %>
  <div class="alert alert-danger">Invalid phone number.</div>
<% } else { %>
<% if (errorCode == 2) { %>
  <div class="alert alert-danger">Invalid phone number and email address.</div>
<% } } } %>
<form method="post" role="form">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" name="name" placeholder="Name" value='<%= body.name %>' required>
  </div>
  <div class="form-group">
    <label for="phone">Phone</label>
    <input type="text" class="form-control" id="phone" name="phone" placeholder="Phone" value='<%= body.phone %>' required>
  </div>
  <div class="form-group">
    <label for="email">Email</label>
    <input type="text" class="form-control" id="email" name="email" placeholder="Email" required value='<%= body.email %>' required>
  </div>
  <div class="form-group">
    <input type="submit" value="Add" class="btn btn-primary">
  </div>
</form>
<%- include("footer") %>



